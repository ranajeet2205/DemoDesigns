<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@drawable/basket"
    tools:context=".PointGameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Court Counter"
        android:layout_gravity="center_horizontal"
        android:textStyle="italic"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEAM A"
                android:textColor="@android:color/black"
                android:textSize="35sp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/total_score_txt_team_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/score_1_team_a_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+1 Point"
                android:layout_margin="10dp"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/score_2_team_a_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 Point"
                android:layout_margin="10dp"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/score_3_team_a_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 Point"
                android:layout_margin="10dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEAM B"
                android:textColor="@android:color/black"
                android:textSize="35sp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/total_score_txt_team_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/score_1_team_b_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+1 Point"
                android:layout_margin="10dp"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/score_2_team_b_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 Point"
                android:layout_margin="10dp"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/score_3_team_b_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 Point"
                android:layout_margin="10dp"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:text="RESET"
        android:textSize="20sp" />

</LinearLayout>